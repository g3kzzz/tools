#!/usr/bin/env bash
# create_workspace.sh - Minimal folder structure creator
# Usage: ./create_workspace.sh
set -euo pipefail

DIRS=(recon exploit loot)

# check for existing dirs
for d in "${DIRS[@]}"; do
  if [[ -d "$d" ]]; then
    echo "Folder exists: $d â€” aborting."
    exit 1
  fi
done

# create dirs
mkdir -p "${DIRS[@]}"

BASE="$(realpath .)"

# minimal output
echo "Created folders at: $BASE"
for d in "${DIRS[@]}"; do
  echo "  - $d/"
done

exit 0

