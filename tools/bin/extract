#!/bin/bash

# Colores
RED='\033[1;31m'
GREEN='\033[1;32m'
YELLOW='\033[1;33m'
CYAN='\033[1;36m'
RESET='\033[0m'

# Verifica que se haya proporcionado un archivo
if [[ $# -ne 1 ]]; then
  echo -e "${RED}[九] Uso: $0 <archivo_nmap>${RESET}"
  exit 1
fi

FILE="$1"

# Verifica si el archivo existe
if [[ ! -f "$FILE" ]]; then
  echo -e "${RED}[九] El archivo '$FILE' no existe.${RESET}"
  exit 1
fi

# Extraer IP y puertos abiertos
echo -e "${CYAN}\n[*] Extrayendo informaci칩n de Nmap...${RESET}"

ip_address="$(grep -oP '\d{1,3}(\.\d{1,3}){3}' "$FILE" | head -n 1)"
ports="$(grep -oP '\d{1,5}/open' "$FILE" | cut -d '/' -f1 | tr '\n' ',' | sed 's/,$//')"

# Mostrar resultados con estilo
echo -e "${GREEN}=========================================="
echo -e "游늯 Archivo: ${YELLOW}$FILE${RESET}"
echo -e "${CYAN}游늷 Direcci칩n IP: ${YELLOW}$ip_address${RESET}"
echo -e "${CYAN}游뛁 Puertos abiertos: ${YELLOW}$ports${RESET}"
echo -e "${GREEN}==========================================${RESET}"

# Copiar puertos al portapapeles (si xclip est치 instalado)
if command -v xclip &> /dev/null; then
  echo -n "$ports" | xclip -sel clip
  echo -e "${GREEN}[九] Puertos copiados al portapapeles${RESET}"
else
  echo -e "${YELLOW}[!] xclip no est치 instalado. No se copi칩 al portapapeles.${RESET}"
fi
